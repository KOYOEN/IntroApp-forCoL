<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="강의 목록"
            android:textColor="?attr/fontColor"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="?attr/backgroundColor">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"

        android:orientation="horizontal">

            <Button
                android:id="@+id/btn_lecture1"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="       Chapter 1.  CoL 이란?"
                android:textSize="18dp"
                android:textAlignment="viewStart"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/image_lecture1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/zero"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

            <Button
                android:id="@+id/btn_lecture2"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="       Chapter 2.  Atomic Task"
                android:textSize="18dp"
                android:textAlignment="viewStart"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/image_lecture2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/zero"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

            <Button
                android:id="@+id/btn_lecture3"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="       Chapter 3.  Choose"
                android:textSize="18dp"
                android:textAlignment="viewStart"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/image_lecture3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/zero" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

            <Button
                android:id="@+id/btn_lecture4"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="앞으로 추가 예정입니다!"
                android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>