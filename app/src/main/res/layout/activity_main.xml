<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundColor"
    tools:context="com.example.jihwa.project_sw.MainActivity">

    <Button
        android:id="@+id/btn_learn"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_above="@id/btn_keep"
        android:layout_alignLeft="@id/btn_keep"
        android:background="#00000000"
        android:drawableTop="@drawable/learning"
        android:text="강의보기"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/btn_quiz"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignRight="@id/btn_keep"
        android:layout_above="@id/btn_keep"
        android:background="#00000000"
        android:drawableTop="@drawable/quiz"
        android:text="퀴즈풀기"
        android:textSize="17dp"/>

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/btn_keep"
        android:layout_width="300dp"
        android:layout_height="300dp"
        CircleProgressView:cpv_autoTextColor="true"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_barColor="?attr/progressBarColor"
        CircleProgressView:cpv_barWidth="35dp"
        CircleProgressView:cpv_innerContourSize="0dp"
        CircleProgressView:cpv_maxValue="100"
        CircleProgressView:cpv_outerContourSize="0dp"
        CircleProgressView:cpv_rimColor="?attr/backgroundColor"
        CircleProgressView:cpv_rimWidth="35dp"
        CircleProgressView:cpv_seekMode="false"
        CircleProgressView:cpv_showUnit="true"
        CircleProgressView:cpv_spinColor="?attr/progressBarColor"
        CircleProgressView:cpv_textColor="?attr/progressBarColor"
        CircleProgressView:cpv_textScale="1"
        CircleProgressView:cpv_unit="%"
        CircleProgressView:cpv_unitColor="?attr/backgroundColor"
        CircleProgressView:cpv_unitPosition="right_top"
        CircleProgressView:cpv_unitScale="1"
        CircleProgressView:cpv_value="10"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom = "10dp"
        />

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@id/btn_keep"
        android:layout_below="@+id/btn_keep"
        android:background="#00000000"
        android:drawableTop="@drawable/setting"
        android:paddingTop="7dp"
        android:text="설정"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/btn_help"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignRight="@id/btn_keep"
        android:layout_below="@+id/btn_keep"
        android:background="#00000000"
        android:drawableTop="@drawable/help"
        android:paddingTop="7dp"
        android:text="도움말"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Ver. 1.0.1"
        android:textSize="20dp"
        android:gravity="center"/>

</RelativeLayout>